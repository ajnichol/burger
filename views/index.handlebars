<div class="text-center">	
	<img alt="burger" src="../public/assets/images/burger.jpg">

	<h1>Eat-Da-Burger</h1>

	{{#each burgers}}
		{{#if this.devoured}}
			{{this.burger_name}}
			<form action="/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="eat" value="true">
				<button type="submit">Devour it!</button>
			</form>
		{{/if}}
	{{/each}}

	<form class="burgerForm" action="/" method="POST">
		<div class="form-group">
			<textarea type="text" name="name"></textarea>
		</div>

		<button type="submit">Submit</button>
	</form>

	<p>Enter a burger you want to eat</p>

</div>
